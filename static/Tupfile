.gitignore

: foreach *.coffee |> coffee -c %f |> %B.js
: foreach *.scss |> sassc -I scss/ < %f > %o |> %B.css

# coffee aggregations
: coffee/bundle/_pre.coffee coffee/bundle/lightbox.coffee coffee/bundle/*.coffee |> coffee -j %o -c %f |> bundle.js
: coffee/game/*.coffee coffee/lightboxes/add_game_to_collection.coffee |> coffee -j %o -c %f |> game.js
: coffee/appearance_editor.coffee coffee/jam/*.coffee |> coffee -j %o -c %f |> jam.js
: coffee/intern/*.coffee |> coffee -j %o -c %f |> intern.js
: coffee/extern/*.coffee |> coffee -j %o -c %f |> extern.js
: coffee/press/*.coffee coffee/lightboxes/add_game_to_collection.coffee |> coffee -j %o -c %f |> press.js
: coffee/appearance_editor.coffee coffee/user/*.coffee |> coffee -j %o -c %f |> user.js
#

: foreach *.md |> markdown < %f > %o |> %B.html
